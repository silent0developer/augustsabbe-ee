<div class="section-{{ section.id }} video-text-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">

      <div class="video-text-items-{{ section.id }}">

        <div class="video-text-media-{{ section.id }}">

          {% if media == "image" %}
            {% if image != blank %}
              <img src="{{ image | image_url }}" al="{{ image.alt }}" {% if lazy %}loading="lazy"{% endif %}>
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          {% else %}
            {% assign video_id =  video.id | default: video_url.id %}
            {%- if video == null and video_url != null -%}
              
              {% if loop %}
                {% assign loop = '&loop=1&playlist=' | append: video_id %}
              {% endif %}

              {% if autoplay %}
                {% assign autoplay = '&mute=1&autoplay=1' %}
              {% endif %}
              
              {%- if video_url.type == 'youtube' -%}
                <iframe
                  src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1{{ autoplay }}{{ loop }}"
                  class="js-youtube"
                  allow="autoplay; encrypted-media"
                  allowfullscreen
                  title="Fixed Video"
                ></iframe>
              {%- else -%}
                <iframe
                  src="https://player.vimeo.com/video/{{ video_id }}{{ autoplay }}{{ loop }}"
                  class="js-vimeo"
                  allow="autoplay; encrypted-media"
                  allowfullscreen
                  title="Fixed Video"
                ></iframe>
            {% endif %}
          
          {% else %}

            {% assign poster_url = poster | image_url %}
              
            {{ video | video_tag:
                autoplay: autoplay,
                loop: loop,
                controls: controls,
                mute: true,
                poster: poster_url,
                id: "vid"
            }}
              
          {% endif %}
            
        {% endif %}
          
        </div>

        <div class="video-text-content-{{ section.id }}">

          {% if heading != blank %}
            <div class="video-text-heading-{{ section.id }}">{{ heading }}</div>
          {% endif %}

          {% if sub_heading != blank %}
            <div class="video-text-subheading-{{ section.id }}">{{ sub_heading }}</div>
          {% endif %}

          {% if text != blank %}
            <div class="video-text-text-{{ section.id }}">{{ text }}</div>
          {% endif %}

          {% if button != blank %}
            <a href="{{ button_url }}" class="video-text-button-{{ section.id }}">
              {{ button }}
              {% if button_use_arrow %}
                <svg viewBox="0 0 24 24" fill="none" class="ag-28w" focusable="false" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"><path d="M4.09998 12H20.1M20.1 12L14.1 6M20.1 12L14.1 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path></svg>
              {% endif %}
            </a>
          {% endif %}
          
        </div>
        
      </div>
    </div>
</div>

